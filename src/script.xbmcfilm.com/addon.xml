<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.xbmcfilm.com" name="xbmcfilm.com" version="0.1.1" provider-name="script.xbmcfilm.com">
	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.simplejson" version="2.0.10"/>
	</requires>
	<extension point="xbmc.service" name="xbmcfilm.service" library="service.py" start="login" />
	<extension point="xbmc.python.script" library="sync_exec.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.addon.metadata" name="trakt.metadata">
		<language></language>
		<summary lang="en">TV and movie scrobbler for trakt.tv</summary>
		<description lang="en">Automatically scrobble all  movies you are watching to xbmcfilm.com!
		</description>
		<platform>all</platform>
	</extension>
</addon>
